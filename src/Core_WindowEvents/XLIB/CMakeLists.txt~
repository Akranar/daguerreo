CMAKE_MINIMUM_REQUIRED(VERSION 2.8)

Project(Core_WindowEvents_XLIB)

FILE(GLOB WindowEvents_XLIB_SRCS *.cpp)
FILE(GLOB WindowEvents_XLIB_H *.h)

IF(WIN32)
    SET(WindowEvents_XLIB_SRCS ${WindowEvents_XLIB_SRCS} ${WindowEvents_XLIB_H})
ENDIF(WIN32)


IF(WIN32 OR APPLE)
    SET_SOURCE_FILES_PROPERTIES(${WindowEvents_XLIB_SRCS} PROPERTIES HEADER_FILE_ONLY TRUE)
    
ELSE(WIN32 OR APPLE)
    SET(EXTRA_LIBS GL X11 GLU)
ENDIF(WIN32 OR APPLE)

ADD_LIBRARY(Core_WindowEvents_XLIB STATIC ${WindowEvents_XLIB_SRCS})
TARGET_LINK_LIBRARIES(Core_WindowEvents_XLIB ${EXTRA_LIBS})


