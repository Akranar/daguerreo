CMAKE_MINIMUM_REQUIRED(VERSION 2.8)

Project(Core_WindowEvents_Win32OpenGL)

FILE(GLOB WindowEvents_Win32OpenGL_SRCS *.cpp)
FILE(GLOB WindowEvents_Win32OpenGL_H *.h)

SET(WindowEvents_Win32OpenGL_SRCS ${WindowEvents_Win32OpenGL_SRCS} ${WindowEvents_Win32OpenGL_H})

IF (WIN32 AND USE_OPENGL)
    MESSAGE(STATUS "WOO")
    FIND_PACKAGE(OpenGL)
    SET(EXTRA_LIBS ${OPENGL_LIBRARIES})
ELSE (WIN32 AND USE_OPENGL)
    SET_SOURCE_FILES_PROPERTIES(${WindowEvents_Win32OpenGL_SRCS} PROPERTIES HEADER_FILE_ONLY TRUE)
ENDIF (WIN32 AND USE_OPENGL)

ADD_LIBRARY(Core_WindowEvents_Win32OpenGL STATIC ${WindowEvents_Win32OpenGL_SRCS})

TARGET_LINK_LIBRARIES(Core_WindowEvents_Win32OpenGL ${EXTRA_LIBS})

